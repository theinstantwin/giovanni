{
	"$schema": "https://schemas.wp.org/wp/6.8/theme.json",
	"version": 3,
	"title": "Micro Precision",
	"settings": {
		"spacing": {
			"spacingSizes": [
				{
					"name": "0",
					"size": "0",
					"slug": "0"
				},
				{
					"name": "1",
					"size": "clamp(0.03125rem, 0.125vw, 0.0625rem)",
					"slug": "1"
				},
				{
					"name": "2",
					"size": "clamp(0.0625rem, 0.25vw, 0.125rem)",
					"slug": "2"
				},
				{
					"name": "3",
					"size": "clamp(0.125rem, 0.375vw, 0.1875rem)",
					"slug": "3"
				},
				{
					"name": "4",
					"size": "clamp(0.1875rem, 0.5vw, 0.25rem)",
					"slug": "4"
				},
				{
					"name": "5",
					"size": "clamp(0.25rem, 0.625vw, 0.3125rem)",
					"slug": "5"
				},
				{
					"name": "6",
					"size": "clamp(0.3125rem, 0.75vw, 0.375rem)",
					"slug": "6"
				},
				{
					"name": "8",
					"size": "clamp(0.375rem, 1vw, 0.5rem)",
					"slug": "8"
				},
				{
					"name": "10",
					"size": "clamp(0.5rem, 1.25vw, 0.625rem)",
					"slug": "10"
				},
				{
					"name": "12",
					"size": "clamp(0.625rem, 1.5vw, 0.75rem)",
					"slug": "12"
				},
				{
					"name": "16",
					"size": "clamp(0.75rem, 2vw, 1rem)",
					"slug": "16"
				},
				{
					"name": "20",
					"size": "clamp(1rem, 2.5vw, 1.25rem)",
					"slug": "20"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontSize": "var(--wp--preset--font-size--xs)",
			"lineHeight": "var(--wp--custom--line-height--tight)",
			"letterSpacing": "var(--wp--custom--letter-spacing--normal)"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--2)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--lg)",
					"lineHeight": "var(--wp--custom--line-height--tight)",
					"letterSpacing": "var(--wp--custom--letter-spacing--tight)",
					"fontWeight": "var(--wp--custom--font-weight--bold)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--2)"
					}
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--md)",
					"lineHeight": "var(--wp--custom--line-height--tight)",
					"letterSpacing": "var(--wp--custom--letter-spacing--tight)",
					"fontWeight": "var(--wp--custom--font-weight--semibold)"
				},
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--4)",
						"bottom": "var(--wp--preset--spacing--1)"
					}
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--sm)",
					"lineHeight": "var(--wp--custom--line-height--snug)",
					"letterSpacing": "var(--wp--custom--letter-spacing--tight)",
					"fontWeight": "var(--wp--custom--font-weight--semibold)"
				},
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--3)",
						"bottom": "var(--wp--preset--spacing--1)"
					}
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xs)",
					"lineHeight": "var(--wp--custom--line-height--snug)",
					"fontWeight": "var(--wp--custom--font-weight--medium)",
					"textTransform": "uppercase",
					"letterSpacing": "var(--wp--custom--letter-spacing--wide)"
				},
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--2)",
						"bottom": "var(--wp--preset--spacing--1)"
					}
				}
			},
			"h5": {
				"typography": {
					"fontSize": "11px",
					"lineHeight": "var(--wp--custom--line-height--normal)",
					"fontWeight": "var(--wp--custom--font-weight--medium)",
					"textTransform": "uppercase",
					"letterSpacing": "var(--wp--custom--letter-spacing--wider)"
				},
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--2)",
						"bottom": "var(--wp--preset--spacing--1)"
					}
				}
			},
			"h6": {
				"typography": {
					"fontSize": "10px",
					"lineHeight": "var(--wp--custom--line-height--normal)",
					"fontWeight": "var(--wp--custom--font-weight--semibold)",
					"textTransform": "uppercase",
					"letterSpacing": "var(--wp--custom--letter-spacing--widest)"
				},
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--1)",
						"bottom": "var(--wp--preset--spacing--1)"
					}
				}
			},
			"p": {
				"typography": {
					"lineHeight": "var(--wp--custom--line-height--snug)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--3)"
					}
				}
			},
			"button": {
				"typography": {
					"fontSize": "10px",
					"fontWeight": "var(--wp--custom--font-weight--medium)",
					"textTransform": "uppercase",
					"letterSpacing": "var(--wp--custom--letter-spacing--wide)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--1)",
						"right": "var(--wp--preset--spacing--3)",
						"bottom": "var(--wp--preset--spacing--1)",
						"left": "var(--wp--preset--spacing--3)"
					}
				},
				"border": {
					"radius": "var(--wp--custom--border-radius--xs)"
				},
				":hover": {
					"transform": "translateY(-0.5px)",
					"boxShadow": "var(--wp--custom--shadows--xs)"
				}
			},
			"link": {
				"typography": {
					"fontWeight": "var(--wp--custom--font-weight--medium)"
				},
				":hover": {
					"typography": {
						"fontWeight": "var(--wp--custom--font-weight--semibold)"
					}
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"typography": {
					"fontSize": "10px",
					"fontWeight": "var(--wp--custom--font-weight--medium)",
					"textTransform": "uppercase",
					"letterSpacing": "var(--wp--custom--letter-spacing--wide)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--md)",
					"fontWeight": "var(--wp--custom--font-weight--black)",
					"letterSpacing": "var(--wp--custom--letter-spacing--tighter)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--sm)",
					"lineHeight": "var(--wp--custom--line-height--tight)",
					"letterSpacing": "var(--wp--custom--letter-spacing--tight)"
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "10px",
					"textTransform": "uppercase",
					"letterSpacing": "var(--wp--custom--letter-spacing--wide)"
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "10px",
					"textTransform": "uppercase",
					"letterSpacing": "var(--wp--custom--letter-spacing--wide)"
				}
			},
			"core/quote": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xs)",
					"lineHeight": "var(--wp--custom--line-height--snug)",
					"fontStyle": "italic"
				},
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--3)",
						"bottom": "var(--wp--preset--spacing--3)"
					},
					"padding": {
						"left": "var(--wp--preset--spacing--2)"
					}
				},
				"border": {
					"left": {
						"color": "var(--wp--preset--color--primary)",
						"width": "1px"
					}
				}
			},
			"core/table": {
				"typography": {
					"fontSize": "10px",
					"lineHeight": "var(--wp--custom--line-height--tight)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--1)",
						"right": "var(--wp--preset--spacing--1)",
						"bottom": "var(--wp--preset--spacing--1)",
						"left": "var(--wp--preset--spacing--1)"
					}
				}
			},
			"core/list": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xs)"
				},
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--2)"
					}
				}
			}
		}
	}
}