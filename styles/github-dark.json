{
	"$schema": "https://schemas.wp.org/wp/6.8/theme.json",
	"version": 3,
	"title": "GitHub Dark",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#0d1117",
					"name": "Background",
					"slug": "background"
				},
				{
					"color": "#ffffff",
					"name": "White",
					"slug": "white"
				},
				{
					"color": "#161b22",
					"name": "Container",
					"slug": "container"
				},
				{
					"color": "#e6edf3",
					"name": "Foreground",
					"slug": "foreground"
				},
				{
					"color": "#8b949e",
					"name": "Gray",
					"slug": "gray"
				},
				{
					"color": "#30363d",
					"name": "Light Gray",
					"slug": "light-gray"
				},
				{
					"color": "#f85149",
					"name": "GitHub Red",
					"slug": "giovanni-blue"
				},
				{
					"color": "#f85149",
					"name": "Primary",
					"slug": "primary"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--foreground)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "#ff6b6b"
					}
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--gray)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--foreground)"
							}
						}
					}
				}
			},
			"core/code": {
				"color": {
					"background": "var(--wp--preset--color--light-gray)",
					"text": "var(--wp--preset--color--foreground)"
				}
			},
			"core/preformatted": {
				"color": {
					"background": "var(--wp--preset--color--light-gray)",
					"text": "var(--wp--preset--color--foreground)"
				}
			},
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--background)"
				},
				"border": {
					"radius": "8px"
				},
				":hover": {
					"color": {
						"background": "#d73027",
						"text": "var(--wp--preset--color--background)"
					},
					"border": {
						"radius": "8px"
					}
				}
			},
			"core/quote": {
				"color": {
					"text": "var(--wp--preset--color--foreground)"
				},
				"border": {
					"left": {
						"color": "var(--wp--preset--color--primary)"
					}
				}
			},
			"core/pullquote": {
				"color": {
					"text": "var(--wp--preset--color--foreground)",
					"background": "var(--wp--preset--color--light-gray)"
				}
			},
			"core/post-date": {
				"color": {
					"text": "var(--wp--preset--color--gray)"
				}
			},
			"core/post-author": {
				"color": {
					"text": "var(--wp--preset--color--gray)"
				}
			},
			"core/post-terms": {
				"color": {
					"text": "var(--wp--preset--color--gray)"
				}
			}
		}
	}
}