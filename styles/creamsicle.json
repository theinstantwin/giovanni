{
	"$schema": "https://schemas.wp.org/wp/6.8/theme.json",
	"version": 3,
	"title": "Creamsicle",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#faf3ea",
					"name": "Background",
					"slug": "background"
				},
				{
					"color": "#ffffff",
					"name": "Container",
					"slug": "container"
				},
				{
					"color": "#383a3c",
					"name": "Foreground",
					"slug": "foreground"
				},
				{
					"color": "#6c757d",
					"name": "Muted Text",
					"slug": "muted-text"
				},
				{
					"color": "#f5eadd",
					"name": "Subtle Border",
					"slug": "subtle-border"
				},
				{
					"color": "#ff335f",
					"name": "Creamsicle Red",
					"slug": "giovanni-blue"
				},
				{
					"color": "#ff335f",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#383a3c",
					"name": "Reading Text",
					"slug": "reading-text"
				},
				{
					"color": "#ff6b6b",
					"name": "Coral Pink",
					"slug": "success"
				},
				{
					"color": "#ff8c42",
					"name": "Orange Cream",
					"slug": "warning"
				},
				{
					"color": "#e6285a",
					"name": "Deep Red",
					"slug": "error"
				},
				{
					"color": "#ff5a7a",
					"name": "Light Pink",
					"slug": "info"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--foreground)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--giovanni-blue)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--foreground)"
					}
				}
			}
		},
		"blocks": {
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--giovanni-blue)",
					"text": "var(--wp--preset--color--background)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--foreground)",
						"text": "var(--wp--preset--color--background)"
					}
				}
			},
			"core/quote": {
				"color": {
					"text": "var(--wp--preset--color--foreground)"
				},
				"border": {
					"left": {
						"color": "var(--wp--preset--color--giovanni-blue)"
					}
				}
			},
			"core/pullquote": {
				"color": {
					"text": "var(--wp--preset--color--foreground)",
					"background": "var(--wp--preset--color--subtle-border)"
				}
			}
		}
	}
}