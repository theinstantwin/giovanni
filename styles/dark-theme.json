{
	"$schema": "https://schemas.wp.org/wp/6.8/theme.json",
	"version": 3,
	"title": "Dark Theme",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#1e2021",
					"name": "Background",
					"slug": "background"
				},
				{
					"color": "#ffffff",
					"name": "White",
					"slug": "white"
				},
				{
					"color": "#1e2021",
					"name": "Container",
					"slug": "container"
				},
				{
					"color": "#FBF1C7",
					"name": "Foreground",
					"slug": "foreground"
				},
				{
					"color": "#4C4641",
					"name": "Muted Text",
					"slug": "muted-text"
				},
				{
					"color": "#404040",
					"name": "Subtle Border",
					"slug": "subtle-border"
				},
				{
					"color": "#ff335f",
					"name": "Giovanni Blue",
					"slug": "giovanni-blue"
				},
				{
					"color": "#ff335f",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#7C7164",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#4C4641",
					"name": "Muted",
					"slug": "muted"
				},
				{
					"color": "#333230",
					"name": "Subtle",
					"slug": "subtle"
				},
				{
					"color": "#FBF1C7",
					"name": "Emphasis",
					"slug": "emphasis"
				},
				{
					"color": "#ff5a7a",
					"name": "Primary Light",
					"slug": "primary-light"
				},
				{
					"color": "#2d1319",
					"name": "Primary Dark",
					"slug": "primary-dark"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--foreground)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontWeight": "var(--wp--custom--font-weight--medium)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--primary-light)"
					},
					"typography": {
						"fontWeight": "var(--wp--custom--font-weight--semibold)"
					}
				},
				":focus": {
					"outline": {
						"width": "2px",
						"style": "solid",
						"color": "var(--wp--preset--color--primary)",
						"offset": "2px"
					}
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--foreground)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--primary)"
							}
						}
					}
				}
			},
			"core/code": {
				"color": {
					"background": "var(--wp--preset--color--subtle-border)",
					"text": "var(--wp--preset--color--foreground)"
				}
			},
			"core/preformatted": {
				"color": {
					"background": "var(--wp--preset--color--subtle-border)",
					"text": "var(--wp--preset--color--foreground)"
				}
			},
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--background)"
				},
				"typography": {
					"fontWeight": "var(--wp--custom--font-weight--medium)"
				},
				"border": {
					"radius": "var(--wp--custom--border-radius--md)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--primary-light)",
						"text": "var(--wp--preset--color--background)"
					},
					"border": {
						"radius": "var(--wp--custom--border-radius--md)"
					},
					"transform": "translateY(-1px)",
					"boxShadow": "var(--wp--custom--shadows--md)"
				},
				":focus": {
					"outline": {
						"width": "2px",
						"style": "solid",
						"color": "var(--wp--preset--color--primary)",
						"offset": "2px"
					}
				},
				":active": {
					"transform": "translateY(0px)",
					"boxShadow": "var(--wp--custom--shadows--sm)"
				}
			},
			"core/quote": {
				"color": {
					"text": "var(--wp--preset--color--foreground)",
					"background": "var(--wp--preset--color--subtle-border)"
				},
				"border": {
					"left": {
						"color": "var(--wp--preset--color--primary)",
						"width": "4px"
					},
					"radius": "0 var(--wp--custom--border-radius--lg) var(--wp--custom--border-radius--lg) 0"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--4)",
						"right": "var(--wp--preset--spacing--6)",
						"bottom": "var(--wp--preset--spacing--4)",
						"left": "var(--wp--preset--spacing--6)"
					}
				}
			},
			"core/pullquote": {
				"color": {
					"text": "var(--wp--preset--color--foreground)",
					"background": "var(--wp--preset--color--subtle-border)"
				},
				"border": {
					"color": "var(--wp--preset--color--primary)",
					"width": "2px",
					"radius": "var(--wp--custom--border-radius--xl)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--8)",
						"right": "var(--wp--preset--spacing--8)",
						"bottom": "var(--wp--preset--spacing--8)",
						"left": "var(--wp--preset--spacing--8)"
					}
				}
			},
			"core/post-date": {
				"color": {
					"text": "var(--wp--preset--color--muted-text)"
				}
			},
			"core/post-author": {
				"color": {
					"text": "var(--wp--preset--color--muted-text)"
				}
			},
			"core/post-terms": {
				"color": {
					"text": "var(--wp--preset--color--muted-text)"
				}
			}
		}
	}
}