{
	"$schema": "https://schemas.wp.org/wp/6.8/theme.json",
	"version": 3,
	"title": "Serif Editorial",
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "Georgia, 'Times New Roman', Times, serif",
					"name": "Georgia Serif",
					"slug": "georgia-serif"
				},
				{
					"fontFamily": "ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif",
					"name": "System Sans Serif",
					"slug": "system-sans-serif"
				},
				{
					"fontFamily": "ui-monospace, SFMono-Regular, \"SF Mono\", Menlo, Monaco, Consolas, \"Liberation Mono\", \"Courier New\", monospace",
					"name": "Mono",
					"slug": "mono"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
			"fontSize": "var(--wp--preset--font-size--lg)",
			"lineHeight": "var(--wp--custom--line-height--relaxed)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
					"fontWeight": "var(--wp--custom--font-weight--bold)",
					"lineHeight": "var(--wp--custom--line-height--tight)",
					"fontSize": "var(--wp--preset--font-size--5xl)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
					"fontWeight": "var(--wp--custom--font-weight--bold)",
					"lineHeight": "var(--wp--custom--line-height--tight)",
					"fontSize": "var(--wp--preset--font-size--4xl)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
					"fontWeight": "var(--wp--custom--font-weight--semibold)",
					"fontSize": "var(--wp--preset--font-size--2xl)"
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-sans-serif)",
					"fontWeight": "var(--wp--custom--font-weight--medium)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
					"fontWeight": "var(--wp--custom--font-weight--bold)"
				}
			},
			"core/button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-sans-serif)"
				}
			}
		}
	}
}