{
	"$schema": "https://schemas.wp.org/wp/6.8/theme.json",
	"version": 3,
	"title": "Serif Editorial",
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "Georgia, 'Times New Roman', Times, serif",
					"name": "Georgia Serif",
					"slug": "georgia-serif"
				},
				{
					"fontFamily": "ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif",
					"name": "System Sans Serif",
					"slug": "system-sans-serif"
				},
				{
					"fontFamily": "ui-monospace, SFMono-Regular, \"SF Mono\", Menlo, Monaco, Consolas, \"Liberation Mono\", \"Courier New\", monospace",
					"name": "Mono",
					"slug": "mono"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
			"fontSize": "var(--wp--preset--font-size--lg)",
			"lineHeight": "var(--wp--custom--line-height--relaxed)",
			"letterSpacing": "var(--wp--custom--letter-spacing--normal)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
					"fontWeight": "var(--wp--custom--font-weight--bold)",
					"lineHeight": "var(--wp--custom--line-height--tight)",
					"letterSpacing": "var(--wp--custom--letter-spacing--tight)",
					"fontSize": "var(--wp--preset--font-size--display)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
					"fontWeight": "var(--wp--custom--font-weight--bold)",
					"lineHeight": "var(--wp--custom--line-height--tight)",
					"letterSpacing": "var(--wp--custom--letter-spacing--tight)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
					"fontWeight": "var(--wp--custom--font-weight--semibold)",
					"lineHeight": "var(--wp--custom--line-height--snug)",
					"fontSize": "var(--wp--preset--font-size--3xl)"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
					"fontWeight": "var(--wp--custom--font-weight--semibold)",
					"lineHeight": "var(--wp--custom--line-height--normal)",
					"fontSize": "var(--wp--preset--font-size--xl)"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
					"fontWeight": "var(--wp--custom--font-weight--medium)",
					"lineHeight": "var(--wp--custom--line-height--normal)",
					"fontSize": "var(--wp--preset--font-size--lg)"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
					"fontWeight": "var(--wp--custom--font-weight--medium)",
					"lineHeight": "var(--wp--custom--line-height--normal)",
					"fontSize": "var(--wp--preset--font-size--md)",
					"textTransform": "uppercase",
					"letterSpacing": "var(--wp--custom--letter-spacing--wide)"
				}
			},
			"button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-sans-serif)",
					"fontWeight": "var(--wp--custom--font-weight--medium)"
				},
				"border": {
					"radius": "var(--wp--custom--border-radius--md)"
				},
				":hover": {
					"transform": "translateY(-1px)",
					"boxShadow": "var(--wp--custom--shadows--md)"
				},
				":focus": {
					"outline": {
						"width": "2px",
						"style": "solid",
						"color": "var(--wp--preset--color--primary)",
						"offset": "2px"
					}
				}
			},
			"link": {
				"typography": {
					"fontWeight": "var(--wp--custom--font-weight--medium)"
				},
				":hover": {
					"typography": {
						"fontWeight": "var(--wp--custom--font-weight--semibold)"
					}
				},
				":focus": {
					"outline": {
						"width": "2px",
						"style": "solid",
						"color": "var(--wp--preset--color--primary)",
						"offset": "2px"
					}
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-sans-serif)",
					"fontWeight": "var(--wp--custom--font-weight--medium)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
					"fontWeight": "var(--wp--custom--font-weight--bold)"
				}
			},
			"core/button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-sans-serif)",
					"fontWeight": "var(--wp--custom--font-weight--medium)"
				},
				"border": {
					"radius": "var(--wp--custom--border-radius--md)"
				},
				":hover": {
					"transform": "translateY(-1px)",
					"boxShadow": "var(--wp--custom--shadows--md)"
				}
			},
			"core/quote": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
					"fontStyle": "italic",
					"fontSize": "var(--wp--preset--font-size--xl)",
					"lineHeight": "var(--wp--custom--line-height--relaxed)"
				},
				"border": {
					"left": {
						"color": "var(--wp--preset--color--primary)",
						"width": "4px"
					},
					"radius": "0 var(--wp--custom--border-radius--lg) var(--wp--custom--border-radius--lg) 0"
				}
			},
			"core/pullquote": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--georgia-serif)",
					"fontSize": "var(--wp--preset--font-size--2xl)",
					"fontStyle": "italic",
					"lineHeight": "var(--wp--custom--line-height--snug)",
					"letterSpacing": "var(--wp--custom--letter-spacing--tight)"
				},
				"border": {
					"radius": "var(--wp--custom--border-radius--xl)"
				}
			}
		}
	}
}