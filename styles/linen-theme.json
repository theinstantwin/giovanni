{
	"$schema": "https://schemas.wp.org/wp/6.8/theme.json",
	"version": 3,
	"title": "Linen Theme",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#faf3ea",
					"name": "Background",
					"slug": "background"
				},
				{
					"color": "#fdf9f3",
					"name": "Container",
					"slug": "container"
				},
				{
					"color": "#383a3c",
					"name": "Foreground",
					"slug": "foreground"
				},
				{
					"color": "#6c757d",
					"name": "Gray",
					"slug": "gray"
				},
				{
					"color": "#f5eadd",
					"name": "Light Gray",
					"slug": "light-gray"
				},
				{
					"color": "#ff335f",
					"name": "Radical Red",
					"slug": "radical-red"
				},
				{
					"color": "#e6285a",
					"name": "Red Dark",
					"slug": "red-dark"
				},
				{
					"color": "#fff5f7",
					"name": "Red Light",
					"slug": "red-light"
				},
				{
					"color": "#ff335f",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#ff335f",
					"name": "Giovanni Blue",
					"slug": "giovanni-blue"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--foreground)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--radical-red)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--red-dark)"
					},
					"typography": {
						"textDecoration": "underline"
					}
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--gray)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--primary)"
							}
						}
					}
				}
			},
			"core/code": {
				"color": {
					"background": "var(--wp--preset--color--light-gray)",
					"text": "var(--wp--preset--color--foreground)"
				}
			},
			"core/preformatted": {
				"color": {
					"background": "var(--wp--preset--color--light-gray)",
					"text": "var(--wp--preset--color--foreground)"
				}
			},
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--background)"
				},
				"border": {
					"radius": "8px"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--red-dark)",
						"text": "var(--wp--preset--color--container)"
					},
					"border": {
						"radius": "8px"
					}
				}
			},
			"core/quote": {
				"color": {
					"text": "var(--wp--preset--color--foreground)",
					"background": "var(--wp--preset--color--light-gray)"
				},
				"border": {
					"left": {
						"color": "var(--wp--preset--color--primary)",
						"width": "4px"
					},
					"radius": "0 8px 8px 0"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--4)",
						"right": "var(--wp--preset--spacing--6)",
						"bottom": "var(--wp--preset--spacing--4)",
						"left": "var(--wp--preset--spacing--6)"
					}
				}
			},
			"core/pullquote": {
				"color": {
					"text": "var(--wp--preset--color--foreground)",
					"background": "var(--wp--preset--color--light-gray)"
				},
				"border": {
					"color": "var(--wp--preset--color--primary)",
					"width": "2px",
					"radius": "12px"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--8)",
						"right": "var(--wp--preset--spacing--8)",
						"bottom": "var(--wp--preset--spacing--8)",
						"left": "var(--wp--preset--spacing--8)"
					}
				}
			},
			"core/post-date": {
				"color": {
					"text": "var(--wp--preset--color--gray)"
				}
			},
			"core/post-author": {
				"color": {
					"text": "var(--wp--preset--color--gray)"
				}
			},
			"core/post-terms": {
				"color": {
					"text": "var(--wp--preset--color--gray)"
				}
			}
		}
	}
}