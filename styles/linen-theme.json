{
	"$schema": "https://schemas.wp.org/wp/6.8/theme.json",
	"version": 3,
	"title": "Linen Theme",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#faf3ea",
					"name": "Background",
					"slug": "background"
				},
				{
					"color": "#ffffff",
					"name": "Container",
					"slug": "container"
				},
				{
					"color": "#383a3c",
					"name": "Foreground",
					"slug": "foreground"
				},
				{
					"color": "#6c757d",
					"name": "Gray",
					"slug": "gray"
				},
				{
					"color": "#f5eadd",
					"name": "Light Gray",
					"slug": "light-gray"
				},
				{
					"color": "#f1ebe0",
					"name": "Gray 50",
					"slug": "gray-50"
				},
				{
					"color": "#f5f1eb",
					"name": "Gray 100",
					"slug": "gray-100"
				},
				{
					"color": "#e9e4db",
					"name": "Gray 200",
					"slug": "gray-200"
				},
				{
					"color": "#d6cfc4",
					"name": "Gray 300",
					"slug": "gray-300"
				},
				{
					"color": "#a8a19a",
					"name": "Gray 400",
					"slug": "gray-400"
				},
				{
					"color": "#6c757d",
					"name": "Gray 500",
					"slug": "gray-500"
				},
				{
					"color": "#495057",
					"name": "Gray 600",
					"slug": "gray-600"
				},
				{
					"color": "#383a3c",
					"name": "Gray 700",
					"slug": "gray-700"
				},
				{
					"color": "#212529",
					"name": "Gray 800",
					"slug": "gray-800"
				},
				{
					"color": "#15171b",
					"name": "Gray 900",
					"slug": "gray-900"
				},
				{
					"color": "#ff335f",
					"name": "Radical Red",
					"slug": "radical-red"
				},
				{
					"color": "#e6285a",
					"name": "Red Dark",
					"slug": "red-dark"
				},
				{
					"color": "#fff5f7",
					"name": "Red Light",
					"slug": "red-light"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--foreground)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--radical-red)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--red-dark)"
					},
					"typography": {
						"textDecoration": "underline"
					}
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--gray-600)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--radical-red)"
							}
						}
					}
				}
			},
			"core/code": {
				"color": {
					"background": "var(--wp--preset--color--gray-100)",
					"text": "var(--wp--preset--color--gray-900)"
				}
			},
			"core/preformatted": {
				"color": {
					"background": "var(--wp--preset--color--gray-50)",
					"text": "var(--wp--preset--color--gray-900)"
				}
			},
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--radical-red)",
					"text": "var(--wp--preset--color--background)"
				},
				"border": {
					"radius": "8px"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--red-dark)",
						"text": "var(--wp--preset--color--background)"
					},
					"border": {
						"radius": "8px"
					}
				}
			},
			"core/quote": {
				"color": {
					"text": "var(--wp--preset--color--gray-700)",
					"background": "var(--wp--preset--color--light-gray)"
				},
				"border": {
					"left": {
						"color": "var(--wp--preset--color--radical-red)",
						"width": "4px"
					},
					"radius": "0 8px 8px 0"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--4)",
						"right": "var(--wp--preset--spacing--6)",
						"bottom": "var(--wp--preset--spacing--4)",
						"left": "var(--wp--preset--spacing--6)"
					}
				}
			},
			"core/pullquote": {
				"color": {
					"text": "var(--wp--preset--color--foreground)",
					"background": "var(--wp--preset--color--light-gray)"
				},
				"border": {
					"color": "var(--wp--preset--color--radical-red)",
					"width": "2px",
					"radius": "12px"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--8)",
						"right": "var(--wp--preset--spacing--8)",
						"bottom": "var(--wp--preset--spacing--8)",
						"left": "var(--wp--preset--spacing--8)"
					}
				}
			},
			"core/post-date": {
				"color": {
					"text": "var(--wp--preset--color--gray-500)"
				}
			},
			"core/post-author": {
				"color": {
					"text": "var(--wp--preset--color--gray-500)"
				}
			},
			"core/post-terms": {
				"color": {
					"text": "var(--wp--preset--color--gray-500)"
				}
			}
		}
	}
}