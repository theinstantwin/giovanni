{
	"$schema": "https://schemas.wp.org/wp/6.8/theme.json",
	"version": 3,
	"title": "Tech Neon",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#0a0a0f",
					"name": "Background",
					"slug": "background"
				},
				{
					"color": "#ffffff",
					"name": "White",
					"slug": "white"
				},
				{
					"color": "#1a1a2e",
					"name": "Container",
					"slug": "container"
				},
				{
					"color": "#e0e7ff",
					"name": "Foreground",
					"slug": "foreground"
				},
				{
					"color": "#6366f1",
					"name": "Muted Text",
					"slug": "muted-text"
				},
				{
					"color": "#1e1b4b",
					"name": "Subtle Border",
					"slug": "subtle-border"
				},
				{
					"color": "#00d4aa",
					"name": "Neon Cyan",
					"slug": "giovanni-blue"
				},
				{
					"color": "#00d4aa",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#e0e7ff",
					"name": "Reading Text",
					"slug": "reading-text"
				},
				{
					"color": "#10b981",
					"name": "Neon Green",
					"slug": "success"
				},
				{
					"color": "#fbbf24",
					"name": "Electric Yellow",
					"slug": "warning"
				},
				{
					"color": "#f87171",
					"name": "Neon Red",
					"slug": "error"
				},
				{
					"color": "#60a5fa",
					"name": "Electric Blue",
					"slug": "info"
				},
				{
					"color": "#a855f7",
					"name": "Neon Purple",
					"slug": "accent-purple"
				},
				{
					"color": "#06b6d4",
					"name": "Cyber Cyan",
					"slug": "accent-cyan"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--foreground)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--giovanni-blue)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--accent-cyan)"
					}
				}
			}
		},
		"blocks": {
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--giovanni-blue)",
					"text": "var(--wp--preset--color--background)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--accent-purple)",
						"text": "var(--wp--preset--color--background)"
					}
				}
			},
			"core/quote": {
				"color": {
					"text": "var(--wp--preset--color--foreground)",
					"background": "var(--wp--preset--color--subtle-border)"
				},
				"border": {
					"left": {
						"color": "var(--wp--preset--color--giovanni-blue)"
					}
				}
			},
			"core/pullquote": {
				"color": {
					"text": "var(--wp--preset--color--foreground)",
					"background": "var(--wp--preset--color--subtle-border)"
				}
			},
			"core/code": {
				"color": {
					"background": "var(--wp--preset--color--subtle-border)",
					"text": "var(--wp--preset--color--giovanni-blue)"
				}
			}
		}
	}
}