{
	"$schema": "https://schemas.wp.org/wp/6.8/theme.json",
	"version": 3,
	"title": "Minimal Mono",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#ffffff",
					"name": "Background",
					"slug": "background"
				},
				{
					"color": "#ffffff",
					"name": "Container",
					"slug": "container"
				},
				{
					"color": "#000000",
					"name": "Foreground",
					"slug": "foreground"
				},
				{
					"color": "#666666",
					"name": "Muted Text",
					"slug": "muted-text"
				},
				{
					"color": "#e5e5e5",
					"name": "Subtle Border",
					"slug": "subtle-border"
				},
				{
					"color": "#000000",
					"name": "Giovanni Blue",
					"slug": "giovanni-blue"
				},
				{
					"color": "#000000",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#4d4d4d",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#cccccc",
					"name": "Muted",
					"slug": "muted"
				},
				{
					"color": "#f0f0f0",
					"name": "Subtle",
					"slug": "subtle"
				},
				{
					"color": "#000000",
					"name": "Emphasis",
					"slug": "emphasis"
				},
				{
					"color": "#000000",
					"name": "Reading Text",
					"slug": "reading-text"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--foreground)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontWeight": "var(--wp--custom--font-weight--medium)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--secondary)"
					},
					"typography": {
						"fontWeight": "var(--wp--custom--font-weight--semibold)"
					}
				},
				":focus": {
					"outline": {
						"width": "2px",
						"style": "solid",
						"color": "var(--wp--preset--color--primary)",
						"offset": "2px"
					}
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--background)"
				},
				"typography": {
					"fontWeight": "var(--wp--custom--font-weight--medium)"
				},
				"border": {
					"radius": "var(--wp--custom--border-radius--none)",
					"width": "2px",
					"style": "solid",
					"color": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--background)",
						"text": "var(--wp--preset--color--primary)"
					},
					"border": {
						"color": "var(--wp--preset--color--primary)"
					}
				},
				":focus": {
					"outline": {
						"width": "3px",
						"style": "solid",
						"color": "var(--wp--preset--color--primary)",
						"offset": "2px"
					}
				},
				":active": {
					"transform": "translateY(1px)"
				}
			}
		},
		"blocks": {
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--background)"
				},
				"typography": {
					"fontWeight": "var(--wp--custom--font-weight--medium)"
				},
				"border": {
					"radius": "var(--wp--custom--border-radius--none)",
					"width": "2px",
					"style": "solid",
					"color": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--background)",
						"text": "var(--wp--preset--color--primary)"
					},
					"border": {
						"color": "var(--wp--preset--color--primary)"
					}
				}
			},
			"core/quote": {
				"border": {
					"left": {
						"color": "var(--wp--preset--color--primary)",
						"width": "4px"
					},
					"radius": "var(--wp--custom--border-radius--none)"
				},
				"typography": {
					"fontWeight": "var(--wp--custom--font-weight--medium)"
				}
			},
			"core/navigation": {
				"typography": {
					"fontWeight": "var(--wp--custom--font-weight--medium)",
					"letterSpacing": "var(--wp--custom--letter-spacing--wide)",
					"textTransform": "uppercase"
				}
			},
			"core/site-title": {
				"typography": {
					"fontWeight": "var(--wp--custom--font-weight--black)",
					"letterSpacing": "var(--wp--custom--letter-spacing--tight)"
				}
			}
		}
	}
}